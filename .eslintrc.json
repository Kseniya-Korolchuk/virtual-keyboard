{
    "env": {
        "browser": true,
        "es6": true
    },

    "extends": "airbnb-base",

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "rules": {
         "linebreak-style": 0,
        "global-require": 0,
        "eslint linebreak-style": [0, "error", "windows"],
        "import/extensions":[0]
    },

    "settings": {
      "import/extensions": [
        "error",
        "never",
        {
          ".js": "always",
          ".json": "always"
        }
     ],
     "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  }
}
